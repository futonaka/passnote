- model_class = UserHasNote
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:note_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @user_has_notes.each do |user_has_note|
      %tr
        %td= link_to user_has_note.id, user_has_note_path(user_has_note)
        %td= user_has_note.user_id
        %td= user_has_note.note_id
        %td=l user_has_note.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_has_note_path(user_has_note), :class => 'btn btn-primary btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_has_note_path(user_has_note), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-xs'

= link_to t('.new', :default => t("helpers.links.new")), new_user_has_note_path, :class => 'btn btn-primary'
