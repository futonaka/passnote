- model_class = Entry
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:note_id) + ':'
  %br
  = @entry.note.title
%p
  %strong= model_class.human_attribute_name(:author_id) + ':'
  %br
  = User.find(@entry.author_id).name
%p
  %strong= model_class.human_attribute_name(:weather) + ':'
  %br
  = @entry.weather
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @entry.date
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @entry.body

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), entries_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_entry_path(@entry), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), entry_path(@entry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
