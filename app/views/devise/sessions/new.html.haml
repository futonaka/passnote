= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery-backstretch/2.0.4/jquery.backstretch.min.js'
= javascript_include_tag 'note', 'data-turbolinks-track' => true

%div
  %h2 Log in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
    .form-actions
      = f.button :submit, "ログイン", class: 'btn-primary'
  = render "devise/shared/links"
